{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Product",
  "description": "A vaccine or related medical product",
  "type": "object",
  "properties": {
    "doc_type": {
      "type": "string",
      "pattern": "^product$"
    },
    "version": {
      "type": "string",
      "format": "semver"
    },
    "active": {
      "type": "boolean"
    },
    "baseUOM": {
      "type": "string",
      "description": "The standard unit of measurement for this product"
    },
    "code": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "name": {
      "type": "string"
    }
  },
  "required": [
    "doc_type",
    "code",
    "description",
    "name"
  ]
}
