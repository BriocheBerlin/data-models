{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Case",
  "description": "An Ebola case registered by the call centre",
  "type": "object",
  "properties": {

    "doc_type": { "type": "string", "pattern": "^case$" },

    "version": { "type": "string", "format": "semver" },

    "caseStatus": { "type": "string" },

    "callNature": {
      "enum": [
        "death",
        "suspect",
        "sick",
        "health information",
        "quarantine",
        "security threat",
        "prank call",
        "other",
        "non ebola"
      ]
    },
    "callNatureOther": { "type": "string" },
    "requestedHealthInfo": { "type": "object" },

    "createdOn": { "type": "string", "format": "date-time" },
    "createdBy": { "$ref": "#/definitions/user" },

    "callDetails": { "type": "string" },
    "isFollowUpCall": { "type": "boolean" },

    "sameCallPatients": { "type": "array" },
    "callId": { "type": "string" },

    "changeLog": { "$ref": "#/definitions/changeLog" },
    "contact": { "$ref": "#/definitions/contact" },
    "patient": { "$ref": "#/definitions/patient" },
    "response": { "$ref": "#/definitions/response" },
    "dispatch": { "$ref": "#/definitions/dispatch" }
  },

  "definitions": {

    "changeLog": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rev": { "type": "string" },
          "timestamp": { "type": "integer" },
          "user": { "$ref": "#/definitions/user" }
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "category": { "type": "string" },
        "phoneNo": { "type": "string" },
        "address": { "type": "string" },
        "location": { "$ref": "#/definitions/location" },
        "preferredLanguages": { "type": "array" },
        "ward": { "$ref": "#/definitions/ward" },
        "organisation": { "type": "string" },
        "role": { "type": "string" }
      },
      "required": [
        "phoneNo"
      ]
    },
    "patient": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "status": { "enum": [
          "dead",
          "alive"
        ]},
        "gender": { "enum": ["F", "M", "unknown"] },
        "age": {
          "type": "object",
          "properties": {
            "years": { "type": "number", "minimum": 0, "maximum": 121 },
            "months": { "type": "number", "minimum": 0, "maximum": 11 },
            "category": { "enum": ["infant", "child", "adult"] }
          }
        },
        "patientName": { "type": "string" },
        "phoneNo": { "type": "string" },
        "address": { "type": "string" },
        "location": { "$ref": "#/definitions/location" },
        "household": {
          "type": "object",
          "properties": {
            "child":          { "type": "boolean" },
            "disabledPerson": { "type": "boolean" },
            "pregnantWoman":  { "type": "boolean" }
          }
        },
        "ward": { "$ref": "#/definitions/ward" }
      }
    },
    "response": {
      "type": "object"
    },
    "dispatch": {
      "type": "object"
    },
    "user": {
      "type": "object",
      "properties": {
        "username": { "type": "string" },
        "fullName": { "type": "string" }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "adminDivision1": { "$ref": "#/definitions/adminDivision" },
        "adminDivision2": { "$ref": "#/definitions/adminDivision" },
        "adminDivision3": { "$ref": "#/definitions/adminDivision" },
        "adminDivision4": { "$ref": "#/definitions/adminDivision" }
      }
    },
    "adminDivision": {
      "type": "object",
      "properties": {
        "id": { "type": ["string", "number"] },
        "ochaId": { "type": "string" },
        "name": { "type": "string" },
        "coordinates": { "type": "object",
            "properties": {
              "lon":  { "type": "number" },
              "lat": { "type": "number" }
            }
        }
      },
      "required": ["id", "name"]
    },
    "ward": {
      "type": "string",
      "maxLength": 3
    }
  },

  "required": [
    "doc_type",
    "version",
    "callNature",
    "createdOn",
    "contact"
  ]
}
